<?xml version="1.0" encoding="UTF-8" ?>

<!-- Rotor at 0 m height. Use positive offset to set height. Tower 105 m high-->

<PropertyList>

 <path>wtD90T105m.ac</path>

 <animation>
  <type>range</type>
  <min-m>0</min-m>
  <max-m>20000</max-m>
 </animation>

 <model>
	<name>obst_top_red1</name>
	<path>/Models/Effects/pos_lamp_red_light_2st.xml</path>
	<offsets>
	  <x-m>1.3</x-m>
	  <y-m>2.2</y-m>
	  <z-m>3.2</z-m>
	</offsets>
 </model>

 <model>
	<name>obst_top_red2</name>
	<path>/Models/Effects/pos_lamp_red_light_2st.xml</path>
	<offsets>
	  <x-m>-1.3</x-m>
	  <y-m>2.2</y-m>
	  <z-m>2.2</z-m>
	</offsets>
 </model>

 <animation>
  <type>rotate</type>
  <object-name>Housing</object-name>
  <object-name>Rotor</object-name>
  <object-name>obst_top_red1</object-name>
  <object-name>obst_top_red2</object-name>
  <property>/environment/wind-from-heading-deg</property>
  <offset-deg>-90</offset-deg>
  <factor>-1</factor>
  <axis>
   <x>0.0</x>
   <y>0.0</y>
   <z>1.0</z>
  </axis>
  <center>
   <x-m>0.0</x-m>
   <y-m>-0.69</y-m>
   <z-m>0.0</z-m>
  </center>
 </animation>

 <animation>
  <type>spin</type>
  <object-name>Rotor</object-name>
  <use-personality type="bool">true</use-personality>
  <property>/environment/wind-speed-kt</property>
  <factor>
   <random>
    <min>0.4</min>
    <max>0.6</max>
   </random>
  </factor>
  <starting-pos-deg>
   <random>
    <min>0</min>
    <max>360</max>
   </random>
  </starting-pos-deg>
  <axis>
   <x>0.0</x>
   <y>1.0</y>
   <z>0.0</z>
  </axis>
  <center>
   <x-m>0.0</x-m>
   <y-m>-0.4</y-m>
   <z-m>0.3</z-m>
  </center>
 </animation>

 <animation>
