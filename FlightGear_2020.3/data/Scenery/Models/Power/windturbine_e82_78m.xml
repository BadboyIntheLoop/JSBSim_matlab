			<entry><ind>  0.0 </ind><dep>  0.0 </dep></entry>
			<entry><ind> 23.3 </ind><dep>  6.0 </dep></entry>
			<entry><ind> 54.0 </ind><dep> 19.5 </dep></entry>
			<entry><ind>100.0 </ind><dep>  0.0 </dep></entry>
		</interpolation>
		<starting-pos-deg>
