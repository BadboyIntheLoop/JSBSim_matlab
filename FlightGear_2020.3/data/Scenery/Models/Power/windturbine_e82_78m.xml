		<object-name>wing_01</object-name>
		<object-name>wing_02</object-name>
		<object-name>wing_03</object-name>
		<use-personality type="bool">true</use-personality>
		<property>/environment/wind-speed-kt</property>
		<!--
		<factor>
			<random>
				<min>0.4</min>
				<max>0.6</max>
			</random>
		</factor>
		-->
