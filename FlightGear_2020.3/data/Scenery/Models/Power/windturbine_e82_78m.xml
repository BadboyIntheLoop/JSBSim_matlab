		<object-name>wing_01</object-name>
		<object-name>wing_02</object-name>
		<object-name>wing_03</object-name>
		<property>/environment/wind-from-heading-deg</property>
		<offset-deg>-90</offset-deg>
		<factor>-1</factor>
		<center>
			<x-m>0.0</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0</z-m>
		</center>
		<axis>
			<x>0.0</x>
			<y>0.0</y>
			<z>1.0</z>
		</axis>
	</animation>
	
