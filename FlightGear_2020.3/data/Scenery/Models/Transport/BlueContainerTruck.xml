<?xml version="1.0" encoding="UTF-8" ?>
<PropertyList>

    <path>BlueContainerTruck.ac</path>

  <animation>
    <type>range</type>
    <min-m>0</min-m>
    <max-property>sim/rendering/static-lod/bare</max-property>
  </animation>
	
  <animation> 
    <type>textranslate</type> 
    <object-name>TextureSolid01</object-name> 
    <property>/sim/time/sun-angle-rad</property>
    <step> 1.57 </step>
    <factor>0.318471338</factor>
    <center>
     <x-m> 0 </x-m>
     <y-m> 0 </y-m>
     <z-m> 0 </z-m>
    </center>
    <axis> 
      <x>  -1 </x> 
      <y>  0 </y> 
      <z>  0 </z> 
    </axis> 
  </animation>

  <animation>
    <type>material</type>
    <object-name>TextureSolid01</object-name>
    <condition>
      <greater-than>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.57</value>
      </greater-than>
    </condition>
    <emission>
      <red>   0.9 </red>
      <green> 0.7 </green>
      <blue>  0.5 </blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>TextureSolid01</object-name>
    <condition>
      <less-than-equals>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.57</value>
      </less-than-equals>
    </condition>
    <emission>
      <red>   0.5 </red>
      <green> 0.5 </green>
      <blue>  0.5 </blue>
    </emission>
  </animation>

</PropertyList>
