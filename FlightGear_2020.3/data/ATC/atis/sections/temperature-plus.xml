<PropertyList>
  <text>Temperature </text>
  <if>
    <not-starts-with>
      <token>temperature-deg</token>
      <text>minus</text>
    </not-starts-with>
    <then>
      <if>
        <not-equals>
          <token>temperature-deg</token>
          <text>zero</text>
        </not-equals>
        <then>
          <text>plus </text>
        </then>
      </if>
    </then>
  </if>
  <token>temperature-deg</token>
  <text>, dewpoint </text>
  <if>
    <not-starts-with>
      <token>dewpoint-deg</token>
      <text>minus</text>
    </not-starts-with>
    <then>
      <if>
        <not-equals>
          <token>dewpoint-deg</token>
          <text>zero</text>
        </not-equals>
        <then>
          <text>plus </text>
        </then>
      </if>
    </then>
  </if>
  <token>dewpoint-deg</token>
  <text>. </text>
</PropertyList>
