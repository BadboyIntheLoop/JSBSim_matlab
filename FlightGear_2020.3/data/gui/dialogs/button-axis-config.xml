    <slider>
      <row>11</row>
      <col>0</col>
      <colspan>1</colspan>
      <name>sensitivity</name>
      <min>0</min>
      <max>5</max>
      <step>0.1</step>
      <live>true</live>
      <property>/sim/gui/dialogs/joystick-config/gui-factor</property>
      <binding>
        <command>dialog-apply</command>
        <object-name>sensitivity</object-name>
